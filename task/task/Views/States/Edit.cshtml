@model task.Models.State

@{
    ViewData["Title"] = "Editar estado";
}

<h2>Editar estado de las tareas</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StateId" />
            <div class="form-group">
                <label asp-for="StateDescription" class="control-label"></label>
                <input asp-for="StateDescription" class="form-control" />
                <span asp-validation-for="StateDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-warning">Regresar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
