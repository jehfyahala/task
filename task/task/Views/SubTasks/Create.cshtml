@model task.Models.SubTask

@{
    ViewData["Title"] = "Nueva Subtarea";
}

<h2>Creación de nuevas subtareas</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SubTaskDescription" class="control-label"></label>
                <input asp-for="SubTaskDescription" class="form-control" />
                <span asp-validation-for="SubTaskDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobId" class="control-label"></label>
                <select asp-for="JobId" class ="form-control" asp-items="ViewBag.JobId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-warning">Regresar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
